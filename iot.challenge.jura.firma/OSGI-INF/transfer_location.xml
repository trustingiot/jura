<?xml version="1.0" encoding="UTF-8"?>
<scr:component
	xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0"
	activate="activate"
	deactivate="deactivate"
	modified="updated"
	name="iot.challenge.jura.firma.transfer.location">

	<implementation class="iot.challenge.jura.firma.service.provider.transferlocation.TransferLocationServiceProvider"/>

	<service>
		<provide interface="iot.challenge.jura.firma.service.TransferLocationService"/>
		<provide interface="org.eclipse.kura.configuration.ConfigurableComponent"/>
	</service>

	<property
		name="service.pid"
		value="iot.challenge.jura.firma.transfer.location"/>

	<reference
		bind="setLocationService"
		unbind="unsetLocationService"
		cardinality="1..1"
		interface="iot.challenge.jura.ubica.service.LocationService"
		name="LocationService"
		policy="static" />

	<reference
		bind="setTransferService"
		unbind="unsetTransferService"
		cardinality="1..1"
		interface="iot.challenge.jura.firma.service.TransferService"
		name="TransferService"
		policy="static" />

</scr:component>
